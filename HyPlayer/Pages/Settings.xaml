<Page
    x:Class="HyPlayer.Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls1="using:HyPlayer.Controls"
    xmlns:hyplayer="using:HyPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:HyPlayer.Pages"
    mc:Ignorable="d"
    NavigationCacheMode="Disabled">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="24,24,24,0"
            FontSize="44"
            FontWeight="Bold"
            Text="设置" />
        <controls1:PivotView Grid.Row="1" FontFamily="Black">
            <controls1:PivotEx>
                <PivotItem FontFamily="Thick" Header="歌词设置">
                    <ScrollViewer Margin="0,48,0,0" VerticalScrollMode="Enabled">
                        <StackPanel
                            x:Name="StackPanelLyricSet"
                            Margin="0,0,0,150"
                            Spacing="20"
                            HorizontalAlignment="Stretch"
                            Orientation="Vertical">
                            <controls:Expander HorizontalAlignment="Stretch" IsExpanded="True"
                                               HorizontalContentAlignment="Stretch" Header="罗马字">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <Grid>
                                    <TextBlock
                                        x:Name="RomajiStatus"
                                        Text="获取中..." HorizontalAlignment="Left" VerticalAlignment="Center" />
                                    <Button
                                        x:Name="ButtonDownloadRomaji"
                                        Click="ButtonBase_OnClick"
                                        Content="获取罗马字资源文件"
                                        HorizontalAlignment="Right" />
                                </Grid>
                            </controls:Expander>

                            <controls:Expander HorizontalAlignment="Stretch" IsExpanded="True"
                                               HorizontalContentAlignment="Stretch" Header="歌词大小">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Orientation="Vertical" Spacing="16">
                                    <Grid>
                                        <TextBlock Text="歌词大小 (负数为自动)" HorizontalAlignment="Left"
                                                   VerticalAlignment="Center" />
                                        <controls:NumberBox
                                            x:Name="LyricSize"
                                            MinWidth="100"
                                            HorizontalAlignment="Right"
                                            LargeChange="5"
                                            SmallChange="1"
                                            SpinButtonPlacementMode="Compact"
                                            ValueChanged="LyricSize_OnValueChanged"
                                            Value="{x:Bind hyplayer:Common.Setting.lyricSize}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock VerticalAlignment="Center" Text="罗马字大小" />
                                        <controls:NumberBox
                                            x:Name="RomajiSize"
                                            MinWidth="100"
                                            HorizontalAlignment="Right"
                                            LargeChange="5"
                                            SmallChange="1"
                                            SpinButtonPlacementMode="Compact"
                                            Value="{x:Bind hyplayer:Common.Setting.romajiSize, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock VerticalAlignment="Center" Text="焦点歌词放大大小" />
                                        <controls:NumberBox
                                            x:Name="LyricScaleSize"
                                            HorizontalAlignment="Right"
                                            MinWidth="100"
                                            LargeChange="5"
                                            SmallChange="1"
                                            SpinButtonPlacementMode="Compact"
                                            Value="{x:Bind hyplayer:Common.Setting.lyricScaleSize, Mode=TwoWay}" />
                                    </Grid>
                                </StackPanel>
                            </controls:Expander>

                            <!--<CheckBox
                                x:Name="CheckBoxLyricShadow"
                                Content="开启歌词阴影"
                                IsChecked="{x:Bind hyplayer:Common.Setting.lyricDropshadow, Mode=TwoWay}" />-->
                            <controls:Expander HorizontalAlignment="Stretch" IsExpanded="True"
                                               HorizontalContentAlignment="Stretch" Header="歌词显示">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Spacing="8">
                                    <Grid>
                                        <TextBlock Text="歌词颜色" VerticalAlignment="Center" />
                                        <ComboBox
                                            HorizontalAlignment="Right"
                                            SelectedIndex="{x:Bind hyplayer:Common.Setting.lyricColor, Mode=TwoWay}">
                                            <ComboBoxItem Content="自动" />
                                            <ComboBoxItem Content="白色" />
                                            <ComboBoxItem Content="黑色" />
                                        </ComboBox>
                                    </Grid>
                                    <Grid>
                                        <TextBlock VerticalAlignment="Center" Text="使用左对齐" />
                                        <ToggleSwitch
                                            MinWidth="10" HorizontalAlignment="Right"
                                            IsOn="{x:Bind hyplayer:Common.Setting.lyricAlignment, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="开启时启动热词" />
                                        <ToggleSwitch
                                            Toggled="HotLyricOnStartUp_Checked"
                                            MinWidth="10"
                                            HorizontalAlignment="Right"
                                            IsOn="{x:Bind hyplayer:Common.Setting.hotlyricOnStartup, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Text="使用 Toast 歌词 (不推荐)" />
                                        <ToggleSwitch
                                            MinWidth="10"
                                            HorizontalAlignment="Right"
                                            IsOn="{x:Bind hyplayer:Common.Setting.noUseHotLyric, Mode=TwoWay}" />
                                    </Grid>
                                </StackPanel>
                            </controls:Expander>
                        </StackPanel>
                    </ScrollViewer>
                </PivotItem>
                <PivotItem FontFamily="Thick" Header="播放设置">
                    <ScrollViewer Margin="0,48,0,0" VerticalScrollMode="Enabled">
                        <StackPanel Margin="0,0,0,150" Orientation="Vertical" Spacing="20">
                            <controls:Expander Header="音质设置" IsExpanded="True" HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Stretch">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <Grid RowSpacing="16">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="在线播放音质" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                    <ComboBox x:Name="ComboBoxSongBr"
                                              SelectionChanged="ComboBoxSongBr_SelectionChanged"
                                              HorizontalAlignment="Right">
                                        <ComboBoxItem Content="标准 (128k)" Tag="standard" />
                                        <ComboBoxItem Content="极高 (320k)" Tag="exhigh" />
                                        <ComboBoxItem Content="无损 (VIP)" Tag="lossless" />
                                        <ComboBoxItem Content="Hi-Res (VIP)" Tag="hires" />
                                    </ComboBox>
                                    <TextBlock Text="歌曲下载音质" Grid.Row="1" HorizontalAlignment="Left"
                                               VerticalAlignment="Center" />
                                    <ComboBox x:Name="ComboBoxSongDownloadBr"
                                              SelectionChanged="ComboBoxSongDownloadBr_SelectionChanged" Grid.Row="1"
                                              HorizontalAlignment="Right">
                                        <ComboBoxItem Content="标准 (128k)" Tag="standard" />
                                        <ComboBoxItem Content="极高 (320k)" Tag="exhigh" />
                                        <ComboBoxItem Content="无损 (VIP)" Tag="lossless" />
                                        <ComboBoxItem Content="Hi-Res (VIP)" Tag="hires" />
                                    </ComboBox>
                                </Grid>
                            </controls:Expander>

                            <controls:Expander Header="渐入渐出" IsExpanded="True" HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Stretch">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Orientation="Vertical" Spacing="8">
                                    <Grid>
                                        <TextBlock Text="切歌时" VerticalAlignment="Center" />
                                        <ToggleSwitch
                                            x:Name="FadeInOut"
                                            HorizontalAlignment="Right"
                                            MinWidth="10"
                                            IsOn="{x:Bind hyplayer:Common.Setting.fadeInOut, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid Visibility="{x:Bind hyplayer:Common.Setting.fadeInOut, Mode=OneWay}">
                                        <TextBlock Text="切歌渐入渐出时间 单位: s" VerticalAlignment="Center" />
                                        <Slider
                                            x:Name="FadeTime"
                                            Width="256"
                                            HorizontalAlignment="Right"
                                            Maximum="12"
                                            Minimum="0"
                                            ToolTipService.ToolTip="{x:Bind FadeTime.Value}"
                                            IsEnabled="{x:Bind hyplayer:Common.Setting.fadeInOut, Mode=OneWay}"
                                            Value="{x:Bind hyplayer:Common.Setting.fadeInOutTime, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="播放暂停时" VerticalAlignment="Center" />
                                        <ToggleSwitch VerticalAlignment="Center" HorizontalAlignment="Right"
                                                      MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.fadeInOutPause, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid Visibility="{x:Bind hyplayer:Common.Setting.fadeInOutPause, Mode=OneWay}">
                                        <TextBlock Text="渐入渐出时间 单位: 0.1s" VerticalAlignment="Center" />
                                        <Slider
                                            x:Name="FadeTimePause"
                                            Width="256"
                                            HorizontalAlignment="Right"
                                            Maximum="50"
                                            Minimum="0"
                                            ToolTipService.ToolTip="{x:Bind FadeTimePause.Value}"
                                            IsEnabled="{x:Bind hyplayer:Common.Setting.fadeInOutPause, Mode=OneWay}"
                                            Value="{x:Bind hyplayer:Common.Setting.fadeInOutTimePause, Mode=TwoWay}" />
                                    </Grid>
                                </StackPanel>
                            </controls:Expander>

                            <controls:Expander Header="随机设置" IsExpanded="True" HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Stretch">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Orientation="Vertical" Spacing="16">
                                    <Grid>
                                        <TextBlock Text="使用不重复随机" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right"
                                                      MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.shuffleNoRepeating, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="显示随机列表" VerticalAlignment="Center" />
                                        <ToggleSwitch
                                            IsOn="{x:Bind hyplayer:Common.Setting.displayShuffledList, Mode=TwoWay}"
                                            HorizontalAlignment="Right"
                                            MinWidth="10"
                                            Visibility="{x:Bind hyplayer:Common.Setting.shuffleNoRepeating, Mode=OneWay}" />
                                    </Grid>
                                </StackPanel>
                            </controls:Expander>
                            <controls:Expander IsExpanded="True" HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Stretch">
                                <controls:Expander.Header>
                                    <Grid>
                                        <TextBlock Text="输出设置" VerticalAlignment="Center" />
                                        <Button
                                            x:Name="BtnChangeAudioRenderDevice"
                                            Click="BtnChangeAudioRenderDevice_Click"
                                            Content="选择音频输出设备" HorizontalAlignment="Right" />
                                    </Grid>
                                </controls:Expander.Header>
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Orientation="Vertical" Spacing="16">
                                    <Grid>
                                        <Button
                                            x:Name="BtnChangeToDefaultAudioRenderDevice"
                                            Click="BtnChangeToDefaultAudioRenderDevice_Click"
                                            Content="恢复默认" />

                                    </Grid>
                                </StackPanel>
                            </controls:Expander>
                            <controls:Expander Header="跳过 VIP 试听歌曲" IsExpanded="True" HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Stretch">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Orientation="Vertical" Spacing="16">
                                    <Grid>
                                        <TextBlock Text="播放时跳过" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right"
                                                      MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.jumpVipSongPlaying, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="下载时跳过" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right"
                                                      MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.jumpVipSongDownloading, Mode=TwoWay}" />
                                    </Grid>
                                </StackPanel>
                            </controls:Expander>
                        </StackPanel>
                    </ScrollViewer>
                </PivotItem>
                <PivotItem FontFamily="Thick" Header="显示设置">
                    <ScrollViewer Margin="0,48,0,0" VerticalScrollMode="Enabled">
                        <StackPanel Margin="0,0,0,150" Spacing="20">
                            <controls:Expander Header="颜色设置 (需要重启 HyPlayer)" IsExpanded="True"
                                               HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Orientation="Vertical" Spacing="16">
                                    <Grid>
                                        <TextBlock Text="主题色" VerticalAlignment="Center" />
                                        <ComboBox
                                            HorizontalAlignment="Right"
                                            SelectedIndex="{x:Bind hyplayer:Common.Setting.themeRequest, Mode=TwoWay}">
                                            <ComboBoxItem Content="跟随系统" />
                                            <ComboBoxItem Content="亮色" />
                                            <ComboBoxItem Content="暗色" />
                                        </ComboBox>
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="播放按钮着强调色" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.playButtonAccentColor, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="播放栏按钮透明" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.playbarButtonsTransparent, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="播放条背景防糊优化" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.playbarBackgroundElay, Mode=TwoWay}" />
                                    </Grid>
                                </StackPanel>
                            </controls:Expander>

                            <controls:Expander Header="歌词页面" IsExpanded="True" HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Stretch">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Spacing="16">
                                    <Grid>
                                        <TextBlock Text="背景显示设置" VerticalAlignment="Center" />
                                        <ComboBox
                                            HorizontalAlignment="Right"
                                            SelectedIndex="{x:Bind hyplayer:Common.Setting.expandedPlayerBackgroundType, Mode=TwoWay}">
                                            <ComboBoxItem Content="专辑封面模糊" />
                                            <ComboBoxItem Content="跟随唱片主色调" />
                                            <ComboBoxItem Content="跟随系统" />
                                            <ComboBoxItem Content="强制白色" />
                                            <ComboBoxItem Content="强制黑色" />
                                        </ComboBox>
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="唱片边框厚度 (0 为无边框)" VerticalAlignment="Center" />
                                        <Slider
                                            x:Name="SliderAlbumBorderLength"
                                            Width="256"
                                            HorizontalAlignment="Right"
                                            Maximum="280"
                                            Minimum="0"
                                            ToolTipService.ToolTip="{x:Bind SliderAlbumBorderLength.Value}"
                                            Value="{x:Bind hyplayer:Common.Setting.albumBorderLength, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="歌词页面封面阴影强度 (0为无阴影)" VerticalAlignment="Center" />
                                        <Slider
                                            x:Name="SliderAlbumShadowDepth"
                                            Width="256"
                                            HorizontalAlignment="Right"
                                            Maximum="20"
                                            Minimum="0"
                                            ToolTipService.ToolTip="{x:Bind SliderAlbumShadowDepth.Value}"
                                            ValueChanged="NBShadowDepth_OnValueChanged"
                                            Value="{x:Bind hyplayer:Common.Setting.expandedCoverShadowDepth, Mode=OneWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="圆形唱片" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.albumRound, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="唱片旋转" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.albumRotate, Mode=TwoWay}" />
                                    </Grid>
                                </StackPanel>
                            </controls:Expander>
                            <controls:Expander Header="个性化" IsExpanded="True" HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Stretch">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Orientation="Vertical" Spacing="16">
                                    <Grid>
                                        <TextBlock Text="无图模式(需重启应用)" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right"
                                                      MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.noImage, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="PlayBar 脱离窗口边缘" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right"
                                                      MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.playBarMargin, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="歌词界面专辑封面不裁剪为正方形" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right"
                                                      Grid.Row="2"
                                                      MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.expandedPlayerFullCover, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="显示发现及评论入口" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right"
                                                      MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.notClearMode, Mode=TwoWay}" />
                                    </Grid>
                                </StackPanel>
                            </controls:Expander>

                            <controls:Expander Header="特效设置" IsExpanded="True" HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Stretch">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Spacing="16">
                                    <Grid>
                                        <TextBlock Text="歌词页面使用亚克力背景 (否则为一般模糊)" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.expandedUseAcrylic, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="播放条使用亚克力背景 (否则为纯色)" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.playbarBackgroundAcrylic, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="展开/收缩「歌词页面」动画" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.expandAnimation, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="播放条背景呼吸动画" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.playbarBackgroundBreath, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="歌词页面专辑封面呼吸动画 (与阴影冲突)" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.expandAlbumBreath, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="表头背景模糊" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.listHeaderAcrylicBlur, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="歌单列表项背景模糊" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.itemOfListBackgroundAcrylicBlur, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="启用触摸手势控制 (歌词页面-专辑封面)" VerticalAlignment="Center" />
                                        <ToggleSwitch HorizontalAlignment="Right" MinWidth="10"
                                                      IsOn="{x:Bind hyplayer:Common.Setting.enableTouchGestureAction, Mode=TwoWay}" />
                                    </Grid>
                                </StackPanel>
                            </controls:Expander>
                        </StackPanel>
                    </ScrollViewer>
                </PivotItem>
                <PivotItem FontFamily="Thick" Header="存储设置">
                    <ScrollViewer Margin="0,48,0,0" VerticalScrollMode="Enabled">
                        <StackPanel Margin="0,0,0,150" Orientation="Vertical" Spacing="20">
                            <controls:Expander Header="路径设置" IsExpanded="True" HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Stretch">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Spacing="16">
                                    <Grid>
                                        <TextBlock Text="下载路径" VerticalAlignment="Center" />
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                                            <TextBox
                                                x:Name="TextBoxDownloadDir"
                                                Width="256"
                                                Text="{x:Bind hyplayer:Common.Setting.downloadDir, Mode=OneWay}"
                                                IsReadOnly="True" />
                                            <Button
                                                x:Name="ButtonDownloadSelect"
                                                Click="ButtonDownloadSelect_OnClick"
                                                Content="选择" />
                                        </StackPanel>
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="搜索路径" VerticalAlignment="Center" />
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                                    Spacing="8">
                                            <TextBox
                                                x:Name="TextBoxSearchingDir"
                                                Width="256"
                                                Text="{x:Bind hyplayer:Common.Setting.searchingDir, Mode=OneWay}"
                                                IsReadOnly="True" />
                                            <Button
                                                x:Name="ButtonSearchingSelect"
                                                Click="ButtonSearchingSelect_OnClick"
                                                Content="选择" />
                                        </StackPanel>
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="缓存路径" VerticalAlignment="Center" />
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                                    Spacing="8">
                                            <TextBox
                                                x:Name="TextBoxCacheDir"
                                                Width="256"
                                                Text="{x:Bind hyplayer:Common.Setting.cacheDir, Mode=TwoWay}"
                                                IsEnabled="{x:Bind hyplayer:Common.Setting.enableCache, Mode=OneWay}" />
                                            <Button
                                                x:Name="ButtonCacheSelect"
                                                Click="ButtonSearchingSelect_OnClick"
                                                Content="选择"
                                                IsEnabled="{x:Bind hyplayer:Common.Setting.enableCache, Mode=OneWay}" />
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </controls:Expander>

                            <controls:Expander Header="名称设置" IsExpanded="True" HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Stretch">
                                <controls:Expander.Transitions>
                                    <TransitionCollection>
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </controls:Expander.Transitions>
                                <StackPanel Spacing="16">
                                    <Grid>
                                        <TextBlock Text="下载文件命名" VerticalAlignment="Center" />
                                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Spacing="8">
                                            <TextBox
                                                Width="256"
                                                Text="{x:Bind hyplayer:Common.Setting.downloadFileName, Mode=TwoWay}" />
                                            <Button>
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <RichTextBlock>
                                                            <Paragraph>
                                                                &#x27A4;
                                                                <Bold>{$SINGER}</Bold>
                                                                : 歌手
                                                                <LineBreak />
                                                                &#x27A4;
                                                                <Bold>{$ALBUM}</Bold>
                                                                : 专辑
                                                                <LineBreak />
                                                                &#x27A4;
                                                                <Bold>{$SONGNAME}</Bold>
                                                                : 歌曲名
                                                                <LineBreak />
