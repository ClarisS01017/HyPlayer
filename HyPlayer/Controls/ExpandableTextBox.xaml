<UserControl
    x:Class="HyPlayer.Controls.ExpandableTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HyPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <StackPanel Orientation="Vertical">
        <local:SelectableTextBox
            Selectable="{x:Bind Selectable ,Mode = OneWay}"
            Text="{x:Bind Text,Mode = OneWay}"
            Foreground="{x:Bind Foreground,Mode = OneWay}"
            FontSize="{x:Bind FontSize,Mode = OneWay}"
            MaxLines="{x:Bind ActualMaxLine,Mode = OneWay}"
            TextWrapping="{x:Bind TextWrapping,Mode = OneWay}"
            FontWeight="{x:Bind FontWeight,Mode = OneWay}" />
        <HyperlinkButton Margin="-12,0,0,0" Content="{x:Bind ButtonText,Mode = OneWay}" Click="ExpandOrCollapseText" />
    </StackPanel>
</UserControl>