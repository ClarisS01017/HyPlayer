<UserControl
    x:Class="HyPlayer.Controls.SongsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="using:HyPlayer.Classes"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hycontrols="using:HyPlayer.Controls"
    xmlns:local="using:HyPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SongListRoot"
    d:DesignHeight="300"
    Loaded="SongListRoot_Loaded"
    mc:Ignorable="d">
    <Grid>
        <ListView
            Name="SongContainer"
            Padding="0"
            IsItemClickEnabled="True"
            ItemClick="SongContainer_ItemClick"
            ItemContainerStyle="{ThemeResource ListViewItemStyle}"
            ItemsSource="{x:Bind VisibleSongs}"
            SelectionMode="{x:Bind MultiSelect, Converter={StaticResource SelectModeConverter}, Mode=OneWay}"
            ShowsScrollingPlaceholders="True">
            <ListView.Footer>
                <ContentControl Margin="0,0,0,130" Content="{x:Bind Footer}" />
            </ListView.Footer>
            <ListView.Header>
                <StackPanel x:Name="HeaderPanel" Orientation="Vertical">
                    <ContentControl
                        Margin="0,-10,0,-30"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Content="{x:Bind ListHeader}" />
                    <Grid
                        x:Name="Toolbar"
                        Margin="0,-100,10,0"
                        ColumnSpacing="12"
                        Visibility="{x:Bind IsSearchEnabled}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition x:Name="SearchBoxColm" Width="150" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition x:Name="MultiSelectColm" Width="50" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="FilterBox"
                            Grid.Column="1"
                            Width="150"
                            VerticalAlignment="Center"
                            controls:DockPanel.Dock="Right"
                            PlaceholderText="搜索..." />
                        <Button
                            x:Name="SearchToggle"
                            Grid.Column="2"
                            controls:DockPanel.Dock="Right"
                            Click="FilterBox_OnTextChanged">
                            <FontIcon Glyph="&#xE721;" />
                        </Button>
                        <Button
                            x:Name="FocusingCurrent"
                            Grid.Column="3"
                            Click="FocusingCurrent_OnClick"
                            ToolTipService.ToolTip="跳转到当前播放">
                            <FontIcon Glyph="&#xE819;" />
                        </Button>
                        <ToggleButton
                            x:Name="MultiSelectBtn"
                            Grid.Column="4"
                            IsChecked="{x:Bind MultiSelect, Mode=TwoWay}">
                            <FontIcon Glyph="&#xE762;" />
                        </ToggleButton>
                    </Grid>
                </StackPanel>
            </ListView.Header>
            <ListView.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem
                        x:Name="FlyoutItemPlay"
                        Click="FlyoutItemPlay_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="立即播放">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="Play" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="FlyoutItemAddToPlaylist"
                        Click="FlyoutItemAddToPlaylist_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="添加到播放列表">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="MusicInfo" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem
                        x:Name="FlyoutItemSinger"
                        Click="FlyoutItemSinger_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="歌手">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE716;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="FlyoutItemAlbum"
                        Click="FlyoutItemAlbum_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="专辑">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE93C;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem
                        x:Name="FlyoutItemComments"
                        Click="FlyoutItemComments_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="评论"
                        Visibility="{x:Bind local:Common.Setting.notClearMode, Mode=OneWay}">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE8F2;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="FlyoutItemDownload"
                        Click="FlyoutItemDownload_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="下载">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE118;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="BtnMV"
                        Click="BtnMV_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="视频"
                        Visibility="{x:Bind local:Common.Setting.notClearMode, Mode=OneWay}">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE173;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="FlyoutCollection"
                        Click="FlyoutCollection_Click"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="收藏">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE1DA;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Name="Btn_Del"
                        Click="Btn_Del_Click"
                        Foreground="Red"
                        Style="{StaticResource MenuFlyoutItemRevealStyle}"
                        Text="删除"
                        Visibility="{Binding ElementName=SongListRoot, Path=IsMySongList}">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Foreground="Red" Glyph="&#xE107;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </ListView.ContextFlyout>
            <ListView.Resources>
                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                </Style>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="classes:NCSong" ScrollViewer.CanContentRenderOutsideBounds="False">
                    <Border>
                        <Grid
                            Margin="-10,12,-10,12"
                            HorizontalAlignment="Stretch"
                            Background="Transparent"
                            IsRightTapEnabled="True"
                            RightTapped="Grid_RightTapped"
                            ScrollViewer.CanContentRenderOutsideBounds="False"
                            Tag="{x:Bind Order}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80" />
                            </Grid.ColumnDefinitions>
                            <controls:ImageEx
                                x:Name="RectangleImageBack"
                                Grid.ColumnSpan="4"
                                Height="50"
                                Margin="2,-8,2,-8"
                                x:Phase="4"
                                CornerRadius="12"
                                Opacity="0.6"
                                EnableLazyLoading="True"
                                IsCacheEnabled="False"
                                Source="{x:Bind Cover}"
                                Stretch="Fill"
                                Visibility="{x:Bind local:Common.Setting.itemOfListBackgroundAcrylicBlur}" />
                            <Rectangle
                                x:Name="RectangleImageAcrylic"
                                Grid.ColumnSpan="4"
                                Margin="1,-7,1,-7"
                                Fill="{ThemeResource SystemControlBaseLowAcrylicElementBrush}"
                                RadiusX="10"
                                RadiusY="10"
                                Visibility="{x:Bind local:Common.Setting.itemOfListBackgroundAcrylicBlur}" />

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <controls:ImageEx
                                    x:Name="ImageRect"
                                    Width="44"
                                    Height="44"
                                    Margin="6,-2,0,-2"
                                    x:Phase="4"
                                    CornerRadius="9"
                                    EnableLazyLoading="True"
                                    IsCacheEnabled="False"
                                    IsEnabled="{x:Bind IsAvailable}"
                                    Source="{x:Bind Cover}"
                                    Stretch="UniformToFill" />
                                <TextBlock
                                    x:Name="OrderId"
                                    Width="48"
                                    Margin="-36,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Text="{x:Bind DspOrder}" />
                                <Grid HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="0"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        VerticalAlignment="Center"
                                        Margin="0,-2,0,0">
                                        <TextBlock
                                            Name="TextBlockSongname"
                                            x:Phase="0"
                                            Style="{ThemeResource SubtitleTextBlockStyle}"
                                            Text="{x:Bind songname}" 
                                            FontSize="18"
                                            FontWeight="Bold"/>
                                        <TextBlock
                                            Name="TextBlockTransName"
                                            x:Phase="0"
                                            FontSize="16"
                                            Foreground="Gray"
                                            Text="{x:Bind ConvertTranslate(transname)}" />
                                        <Image
                                            Height="24"
                                            Source="/Assets/cloud.png"
                                            Visibility="{x:Bind IsCloud}" />
                                        <Image
                                            Height="24"
                                            Margin="-5,3,0,0"
                                            Source="/Assets/vip.png"
                                            Visibility="{x:Bind IsVip}" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <TextBlock
                                            Name="TextBlockAlia"
                                            Grid.Column="1"
                                            x:Phase="2"
                                            FontSize="11"
                                            Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                            Text="{x:Bind alias}"
                                            Visibility="{x:Bind alias, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                                <TextBlock
                                            Name="TextBlockArtist"
                                            Grid.Row="2"
                                            Margin="0,0,12,0"
                                            FontSize="12"
                                            Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                            Text="{x:Bind ArtistString}" />
                                <TextBlock
                                            Name="TextBlockAlbum"
                                            Grid.Row="3"
                                            FontSize="12"
                                            Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                            Text="{x:Bind Album.name}" />
                            </StackPanel>
                            <StackPanel
                                Grid.Column="3"
                                Margin="0,0,14,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button
                                    x:Name="More"
                                    Width="45"
                                    Height="35"
                                    x:Phase="3"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="More_Click"
                                    Tag="{x:Bind Order}"
                                    ToolTipService.ToolTip="更多">
                                    <FontIcon Glyph="&#xE10C;" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Toolbar.Margin" Value="0,-110,0,0" />
                        <Setter Target="FilterBox.Width" Value="80" />
                        <Setter Target="SearchBoxColm.Width" Value="80" />
                        <Setter Target="MultiSelectColm.Width" Value="0" />
                        <Setter Target="MultiSelectBtn.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1300" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Toolbar.Margin" Value="0,-35,10,0" />
                        <Setter Target="FilterBox.Width" Value="150" />
                        <Setter Target="SearchBoxColm.Width" Value="150" />
                        <Setter Target="MultiSelectColm.Width" Value="50" />
                        <Setter Target="MultiSelectBtn.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>