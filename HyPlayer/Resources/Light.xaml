<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <AcrylicBrush
        x:Key="ExpandedPlayerMask"
        BackgroundSource="Backdrop"
        FallbackColor="{StaticResource SystemChromeMediumColor}"
        TintColor="#FFAAAAAA"
        TintLuminosityOpacity="0.4"
        TintOpacity="0.6" />
    <SolidColorBrush x:Key="FakeMicaBackgroundColor" Color="#F9F9F9FF" />

    <Color x:Key="CaptionButtonForegroundColor">#000000</Color>
    <Color x:Key="CaptionButtonHoverColor">#F0F0F0</Color>
    <Color x:Key="CaptionButtonPressedColor">#F3F3F3</Color>
    <Color x:Key="GradientColor">#DDFFFFFF</Color>
</ResourceDictionary>